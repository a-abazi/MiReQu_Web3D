#version 300 es

uniform mat4 W;
uniform mat3 N;
uniform mat4 WVP;
uniform mat4 LWVP;
uniform vec3 eye;

in vec4 pos;
out vec3 wposition;
out vec3 wnormal;
in vec2 nor;
out vec4 lightPosition;
out vec4 wvpposition;
out vec3 eyeDir;

void main()
{
    vec4 spos = vec4(pos.xyz, 1.0);
    wposition = vec4(W * spos).xyz;
    wnormal = normalize(N * vec3(nor, pos.w));
    gl_Position = WVP * spos;
    lightPosition = LWVP * spos;
    wvpposition = gl_Position;
    eyeDir = eye - wposition;
}

